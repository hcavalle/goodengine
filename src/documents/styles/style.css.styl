/* Sticky footer styles
-------------------------------------------------- */
html {
  position: relative;
  min-height: 100%;
}
body, h2, h3{
  /* Margin bottom by footer height */
  margin-bottom: 60px;
  font-family: "Merriweather", serif;
}
body h1 {
  font-family: "open sans", sans serif;
  font-weight: 500;
  font-size: 5rem;
}
.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 60px;
  background-color: #f5f5f5;
}

